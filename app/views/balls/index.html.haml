.container
  %h1 Listing balls

  %table.table.table-bordered.table-bordered.table-striped
    %thead
      %tr
        %th Name
        %th Location
        %th Status
        %th Sensors
        %th
        %th
    %tbody
      - @balls.each do |ball|
        %tr
          %td= ball.name
          %td= ball.location
          %td= ball.status
          %td= link_to 'Sensors', sensors_path(q: { ball_id_eq: ball.id })
          %td= link_to 'Show', ball
          %td= link_to 'Edit', edit_ball_path(ball)

  %br

  = link_to 'New Sensor', new_ball_path
